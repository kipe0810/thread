<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2 post-index">
			<%= render 'search/search', categories: @categories %>
			<h3 class="post-index-headline"><strong><%= @category.name %></strong></h3>
			<% @category.posts.each do |f| %>
				<div class="post-index-titlearea">
					<p class="created-at"><%= f.created_at.strftime('%Y年%m月%d日 %H時%M分') %></p>
					<p class="post-index-title"><%= link_to f.title, f %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>