<div class="container">
	<div class="row">
		<div class="form-area col-xs-6 col-xs-offset-3">
			<h1 class="post-new-headline">カテゴリ追加</h1>
			<%= form_for(@category) do |f| %>
			  <table class="table">
			  	<tr>
			  		<th>名前</th>
			  		<td><%= f.text_field :name, class: "form-control", style:"width: 70%;" %></td>
			  	</tr>
			  </table>
			  <%= f.submit '追加', class: "btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>